{
  "compilerOptions": {
      "module": "ES6",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": ".", // Root directory for absolute paths
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
            ],
          "@utils/*": ["src/utils/*"],
          "src/*": ["src/*"] // Map 'src/' to your actual 'src' folder
      }
  },
  "include": [
      "src/**/*",
      "src/**/*.ts",
      "src/utils/*"
, "server.ts"  ],
  "exclude": ["node_modules"]
}